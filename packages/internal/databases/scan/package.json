{
  "name": "@x402scan/scan-db",
  "version": "1.0.0",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit",
    "db:generate": "dotenv -e ../../../../.env -- prisma generate",
    "db:migrate": "dotenv -e ../../../../.env -- prisma migrate dev --skip-generate",
    "db:deploy": "dotenv -e ../../../../.env -- prisma migrate deploy",
    "db:format": "prisma format",
    "prebuild": "npm run db:generate",
    "predev": "npm run db:generate",
    "postinstall": "npm run db:generate",
    "studio": "dotenv -e ../../../../.env -- prisma studio",
    "knip": "pnpm -w knip --workspace ./packages/internal/databases/scan",
    "format": "pnpm -w format-dir ./packages/internal/databases/scan",
    "check:format": "pnpm -w check:format-dir ./packages/internal/databases/scan"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@x402scan/eslint-config": "workspace:*",
    "@x402scan/typescript-config": "workspace:*",
    "@types/node": "^20",
    "@types/ws": "^8.18.1",
    "eslint": "^9.39.1",
    "prisma": "^6.19.0",
    "rimraf": "^5.0.5",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  }
}
